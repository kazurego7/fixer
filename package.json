{
  "name": "codex-mobile-ui",
  "version": "0.1.0",
  "description": "Mobile web UI for local Codex App Server",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "start:watch": "node --watch server.js",
    "build": "vite build --config vite.config.js",
    "build:watch": "vite build --watch --config vite.config.js",
    "dev": "bash -lc \"trap 'kill 0' EXIT; npm run build:watch & npm run start:watch\"",
    "web:dev": "vite --config vite.config.js",
    "test": "node --test test/*.test.js",
    "test:e2e": "playwright test",
    "test:smoke": "playwright test --grep @smoke",
    "test:all": "npm test && npm run test:smoke"
  },
  "dependencies": {
    "@fastify/static": "^9.0.0",
    "fastify": "^5.7.4",
    "framework7": "^9.0.3",
    "framework7-react": "^9.0.3",
    "marked": "^17.0.3",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@vitejs/plugin-react": "^5.1.4",
    "vite": "^7.3.1"
  }
}
